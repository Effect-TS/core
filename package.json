{
  "name": "matechs",
  "private": true,
  "repository": "https://github.com/mikearnaldi/matechs-effect.git",
  "scripts": {
    "doc": "yarn typedoc --module commonjs --out docs --exclude \"packages/**/*+(tests|type-tests)/**/*.ts\" packages && echo.> ./docs/.nojekyll",
    "init-vendor": "git submodule update --init",
    "build-vendor": "yarn --cwd vendor/fp-ts build"
  },
  "workspaces": [
    "packages/*",
    "vendor/*"
  ],
  "devDependencies": {
    "dtslint": "^2.0.2",
    "lerna": "^3.18.4",
    "prettier": "^1.19.1",
    "tslint": "^5.20.1",
    "typedoc": "0.15",
    "typedoc-plugin-lerna-packages": "^0.2.1",
    "typescript": "^3.7.2"
  }
}
