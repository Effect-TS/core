{
  "extends": "./tsconfig.base.json",
  "files": [],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@effect-ts/core/*": ["packages/core/src/*"],
      "@effect-ts/core": ["packages/core/src"],
      "@effect-ts/system/*": ["packages/system/src/*"],
      "@effect-ts/system": ["packages/system/src"],
      "@effect-ts/tracing-plugin/*": ["packages/tracing-plugin/src/*"],
      "@effect-ts/tracing-plugin": ["packages/tracing-plugin/src"],
      "@effect-ts/tracing-utils/*": ["packages/tracing-utils/src/*"],
      "@effect-ts/tracing-utils": ["packages/tracing-utils/src"],
      "@effect-ts/build-utils/*": ["packages/build-utils/src/*"],
      "@effect-ts/build-utils": ["packages/build-utils/src"],
      "@effect-ts/schema/*": ["packages/schema/src/*"],
      "@effect-ts/schema": ["packages/schema/src"]
    },
    "target": "ES2018",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["scripts/**/*.ts"]
}
